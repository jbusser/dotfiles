[user]
  name = Jerry Busser
  email = jerry.busser@gmail.com
[alias]
  bd = branch -D
  ci = commit -v
  co = checkout
  ctags = !.git/hooks/ctags
  d = diff
  f = fetch
  l = log --oneline --decorate
  lrc = log --oneline --format='%s'
  m = merge
  p = push
  pf = push --force-with-lease
  rom = rebase -i origin/master
  ros = rebase -i origin/stage
  rc = rebase --continue
  s = status
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
  ureset = !git upstream && git reset --hard $(git upstream)
[credential]
  helper = osxkeychain
[color]
  ui = auto
[fetch]
  prune = true
[push]
  default = current
[init]
  templatedir = ~/.git_template
[diff]
  tool = mvimdiff
[difftool "mvimdiff"]
  cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
[core]
  editor = /usr/local/bin/vim
  excludesfile = /Users/jbusser/.gitignore_global
[heroku]
  account = personal
